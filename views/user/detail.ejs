<%- partial('./partial/sidemenu.ejs')%>
<div class="content user w-100">
  <h5 class="main-heading1">用戶<span class="highlight">資料</span></h5>
  <div class="container-fluid">
    <form class="form-group row" action="/user/detail" method="POST">
      <div class="form-group col-12 col-lg-6 required">
        <label class="control-label" for="inputUsername">用戶名稱</label>
        <input type="text" class="form-control" id="inputUsername" name="Username" value="<%=user.Username%>" required/>
      </div>
      <div class="form-group col-12 col-lg-6">
        <label class="control-label" for="inputEmail">用戶電郵</label>
        <input type="email" class="form-control" id="inputEmail" name="Email" value="<%=user.Email%>" required/>
      </div>
      <div class="form-group col-12">
        <label class="control-label" for="inputPassword">更改密碼</label>
        <input type="password" class="form-control" id="inputPassword" name="Password" placeholder="請輸入新密碼" />
      </div>
      <div class="form-group col-12 col-lg-6">
        <label class="control-label" for="inputChiName">姓名：（中文）</label>
        <input type="text" class="form-control" id="inputChiName" name="ChiName" value="<%=user.ChiName%>" required/>
      </div>
      <div class="form-group col-12 col-lg-6">
        <label class="control-label" for="inputEngName">姓名：（英文）</label>
        <input type="text" class="form-control" id="inputEngName" name="EngName" value="<%=user.EngName%>" required/>
      </div>
      <div class="form-group col-12 col-lg-6">
        <label class="control-label" for="inputDate">出生日期</label>
        <input type="date" class="form-control" id="inputDate" name="Date" value="<%=user.Date.getFullYear()%>-<%=`${user.Date.getMonth()<9?'0':''}${user.Date.getMonth()+1}`%>-<%=`${user.Date.getDate()<10?'0':''}${user.Date.getDate()}`%>" pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}" required/>
      </div>
      <div class="form-group col-12 col-lg-6">
        <label class="control-label" for="inputMobile">聯絡電話:（手提）</label>
        <input type="tel" class="form-control" id="inputMobile" name="Mobile" value="<%=user.Mobile%>" required/>
      </div>
      <div class="form-group col-12 col-lg-6">
        <label class="control-label" for="inputHome">聯絡電話:（住宅）</label>
        <input type="tel" class="form-control" id="inputHome" name="Hnumber" value="<%=user.Hnumber%>"/>
      </div>
      <div class="form-group col-6">
        <span>*必須填寫</span>
      </div>
      <div class="form-group col-6">
        <button class="btn btn-danger" type="submit">Save</button>
      </div>
    </form>
  </div>
</div>
